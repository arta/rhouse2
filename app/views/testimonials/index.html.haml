%h1 Listing testimonials

%table
  %thead
    %tr
      %th Body
      %th Client signature
      %th Job started at
      %th Job completed at
      %th
      %th
      %th

  %tbody
    - @testimonials.each do |testimonial|
      %tr
        %td= testimonial.body
        %td= testimonial.client_signature
        %td= testimonial.job_started_at
        %td= testimonial.job_completed_at
        %td= link_to 'Show', testimonial
        %td= link_to 'Edit', edit_testimonial_path(testimonial)
        %td= link_to 'Destroy', testimonial, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Testimonial', new_testimonial_path
