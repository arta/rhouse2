- provide :main_class, 'portfolio'
- provide :main_container_class, 'portfolio'

%windows
  = render 'contact_prompt_heading', { h1: 'Portfolio :: Windows' }

  %section.portfolio
    - @windows_portfolios.each do |windows_portfolio|
      - if windows_portfolio.images.present?
        - windows_portfolio.images.ordered.each do |image|
          %figure
            = image_tag image.file, class: 'portfolio'
            %figcaption
              %h4= image.caption_heading if image.caption_heading.present?
              %p= image.caption_text if image.caption_text.present?
              %p= image.comment if image.comment.present?
