.title-bar{ data: { responsive_toggle: 'full-nav', hide_for: 'xmedium' } }
  .rh2-logo
    = link_to root_path do
      = image_tag 'logo-RH2-plain-squished.jpg',
        class: 'rh2-logo-img'
  -# %button.menu-icon{ data: { toggle: 'full-nav' }, type: 'button' }
  %button.fas.fa-hard-hat{ data: { toggle: 'full-nav' }, type: 'button' }

.top-bar#full-nav
  .top-bar-left
    .rh2-logo-headlines
      .rh2-logo
        = link_to root_path do
          = image_tag 'logo-RH2-plain-squished.jpg',
            class: 'rh2-logo-img'
      .rh2-headlines
        %p.rh2-headline-p Your Home Improvement Specialist
        %p.rh2-subheadline-p We Will Treat it Like Our House Too!
  .top-bar-right
    %nav.header
      = render 'flash'
      = render 'nav_global'
      - if lookup_context.exists?('nav_regional', path_prefixes, true)
        = render 'nav_regional'
